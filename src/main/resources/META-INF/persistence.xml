<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
        https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd" version="3.0">

  <!-- Jakarta tutorial "unit" -->
  <persistence-unit name="MyUnit">
    <provider>org.datanucleus.api.jakarta.PersistenceProviderImpl</provider>
    <class>org.example.model.Student</class>
    <class>org.example.model.Subject</class>
    <class>org.example.model.Mark</class>
    <exclude-unlisted-classes/>
  </persistence-unit>
</persistence>